<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio - Sistema de Gestión Académica</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="/img/logoo.png" type="image/x-icon">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <img src="/img/logoo.png" alt="Logo" class="logo-img">
                <span class="logo-text">SGA</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="#dashboard" class="nav-link active" data-section="dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">Inicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#students" class="nav-link" data-section="students">
                        <i class="fas fa-user-graduate"></i>
                        <span class="nav-text">Estudiantes</span>
                        <span class="nav-badge"><%= totalEstu %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#teachers" class="nav-link" data-section="teachers">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span class="nav-text">Profesores</span>
                        <span class="nav-badge"><%= totalProf %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#grades" class="nav-link" data-section="grades">
                        <i class="fas fa-chart-line"></i>
                        <span class="nav-text">Calificaciones</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#courses" class="nav-link" data-section="courses">
                        <i class="fas fa-book"></i>
                        <span class="nav-text">Cursos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#reports" class="nav-link" data-section="reports">
                        <i class="fas fa-file-alt"></i>
                        <span class="nav-text">Reportes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#settings" class="nav-link" data-section="settings">
                        <i class="fas fa-cog"></i>
                        <span class="nav-text">Configuración</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title" id="pageTitle">Inicio</h1>
            </div>
            
            <div class="header-right">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Buscar..." id="searchInput">
                </div>
                
                <div class="header-actions">
                    <div class="user-menu" id="userMenu">
                        <button class="user-menu-btn" id="userMenuBtn">
                            <div class="user-avatar-small">
                                <i class="fas fa-user"></i>
                            </div>
                            <span class="user-name-header"><%= datos.nombre_apellido || 'Admin' %></span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        
                        <div class="user-dropdown" id="userDropdown">
                            <a href="#profile" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                Mi Perfil
                            </a>
                            <a href="#settings" class="dropdown-item">
                                <i class="fas fa-cog"></i>
                                Configuración
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/login" class="dropdown-item logout-btn" id="logoutBtn">
                                <i class="fas fa-sign-out-alt"></i>
                                Cerrar Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="content-area">
            <!-- Dashboard -->
            <section class="content-section active" id="dashboard-section">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon students">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number"><%= totalEstu %></h3>
                            <p class="stat-label">Estudiantes</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon teachers">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number"><%= totalProf %></h3>
                            <p class="stat-label">Profesores</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon courses">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">32</h3>
                            <p class="stat-label">Cursos</p>
                            <span class="stat-change neutral">Sin cambios</span>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon grades">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">8.7</h3>
                            <p class="stat-label">Promedio General</p>
                            <span class="stat-change positive">+0.3 este mes</span>
                        </div>
                    </div>
                </div>

                <div class="dashboard-grid">
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3>Actividad Reciente</h3>
                            <button class="card-action">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                        <div class="card-content">
                            <div class="activity-list">
                                <div class="activity-item">
                                    <div class="activity-icon">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p>Nuevo estudiante registrado: <strong>María García</strong></p>
                                        <span class="activity-time">Hace 2 horas</span>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p>Calificaciones actualizadas en <strong>Matemáticas</strong></p>
                                        <span class="activity-time">Hace 4 horas</span>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon">
                                        <i class="fas fa-bell"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p>Recordatorio: Reunión de profesores mañana</p>
                                        <span class="activity-time">Hace 1 día</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3>Próximos Eventos</h3>
                            <button class="card-action">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <div class="card-content">
                            <div class="event-list">
                                <div class="event-item">
                                    <div class="event-date">
                                        <span class="day">15</span>
                                        <span class="month">Mar</span>
                                    </div>
                                    <div class="event-content">
                                        <h4>Exámenes Finales</h4>
                                        <p>Período de evaluaciones finales</p>
                                    </div>
                                </div>
                                <div class="event-item">
                                    <div class="event-date">
                                        <span class="day">20</span>
                                        <span class="month">Mar</span>
                                    </div>
                                    <div class="event-content">
                                        <h4>Reunión de Padres</h4>
                                        <p>Entrega de calificaciones</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Estudiantes -->
            <section class="content-section" id="students-section">
                <div class="section-header">
                    <h2>Gestión de Estudiantes</h2>
                    <button class="btn btn-primary" id="addStudentBtn">
                        <i class="fas fa-plus"></i>
                        Agregar Estudiante
                    </button>
                </div>
                
                <div class="table-container">
                    <div class="table-header">
                        <div class="table-filters">
                            <select class="filter-select" id="gradeFilter" name="gradeFilter">
                                <option value="">Todos los grados</option>
                                <% for (let i = 1; i <= 9; i++) { %>
                                <option value="<%= i %>"><%= i %>° Semestre</option>
                                <% } %>
                            </select>
                            <input type="text" class="filter-input" placeholder="Buscar por carrera..." id="careerFilter" name="careerFilter">
                            <input type="text" class="filter-input" placeholder="Buscar estudiante..." id="studentSearch" name="studentSearch">
                        </div>
                    </div>
                    <table class="data-table" id="studentsTable">
                        <thead>
                            <tr>
                                <th>Estudiante</th>
                                <th>Email</th>
                                <th>Carrera</th>
                                <th>Semestre</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% estudiantes.forEach(estudiante => { %>
                                <tr data-info='<%- JSON.stringify(estudiante.iformacion_personal || {}) %>'>
                                    <td><%= estudiante.nombre_apellido %></td>
                                    <td><%= estudiante.email %></td>
                                    <td><%= estudiante.especialidad %></td>
                                    <td><%= estudiante.grado %>° Semestre</td>
                                    <td><span class="status-badge <%= estudiante.estado.toLowerCase() %>"><%= estudiante.estado %></span></td>
                                    <td>
                                    <div class="action-buttons">
                                        <button class="btn-icon view" title="Ver" onclick="verEstudiante('<%= estudiante.id_estudiante %>')">
                                        <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-icon edit" title="Editar" onclick="editarEstudiante('<%= estudiante.id_estudiante %>')">
                                        <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-icon delete" title="Eliminar" onclick="eliminarEstudiante('<%= estudiante.id_estudiante %>')">
                                        <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Profesores -->
            <section class="content-section" id="teachers-section">
                <div class="section-header">
                    <h2>Gestión de Profesores</h2>
                    <button class="btn btn-primary" id="addTeacherBtn">
                        <i class="fas fa-plus"></i>
                        Agregar Profesor
                    </button>
                </div>
                
                <div class="teachers-grid">
                    <% profesores.forEach(profesor => { %>
                        <div class="teacher-card">
                        <div class="teacher-avatar">
                            <%= profesor.nombre_apellido ? profesor.nombre_apellido.charAt(0).toUpperCase() : '?' %>
                        </div>
                        <div class="teacher-info">
                            <h3>Prof. <%= profesor.nombre_apellido %></h3>
                            <p class="teacher-subject"><%= profesor.materia || 'Asignatura no especificada' %></p>
                            <p class="teacher-email"><%= profesor.email %></p>
                        </div>
                        <div class="teacher-stats">
                            <div class="stat">
                                <span class="stat-value"><%= profesor.especialidad || 'Sin especialidad' %></span>
                                <span class="stat-label">Especialidad</span>
                            </div>
                        </div>
                        <div class="teacher-actions">
                            <button class="btn btn-outline" onclick="verPerfil('<%= profesor.id %>')">Ver Perfil</button>
                            <button class="btn-icon" onclick="mostrarOpciones('<%= profesor.id %>')">
                            <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                        </div>
                    <% }); %>
                    <% if (profesores.length === 0) { %>
                    <div class="no-results">
                        <p>No hay profesores registrados</p>
                    </div>
                    <% } %>
                </div>
            </section>

            <!-- Otras secciones -->
            <section class="content-section" id="grades-section">
                <h2>Gestión de Calificaciones</h2>
                <p>Contenido de calificaciones...</p>
            </section>

            <section class="content-section" id="courses-section">
                <h2>Gestión de Cursos</h2>
                <p>Contenido de cursos...</p>
            </section>

            <section class="content-section" id="reports-section">
                <h2>Reportes</h2>
                <p>Contenido de reportes...</p>
            </section>

            <section class="content-section" id="settings-section">
                <h2>Configuración</h2>
                <p>Contenido de configuración...</p>
            </section>
        </div>
    </main>

    <div class="overlay" id="overlay"></div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
